<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/margin_dp100"
            android:layout_height="@dimen/margin_dp100"
            android:layout_margin="@dimen/margin_dp5"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/book" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_dp40"
            android:text=""
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/textsize_sp10" />

        <TextView
            android:id="@+id/tv_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-5dp"
            android:text=""
            android:textColor="@color/colorTextWhite"
            android:textSize="@dimen/textsize_sp15" />

    </RelativeLayout>
</RelativeLayout>
