<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_dp5"
        android:background="@drawable/custom_faq_bg">

        <RelativeLayout
            android:id="@+id/relative_question"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_dp45"
            android:layout_marginTop="@dimen/margin_dp10">

            <TextView
                android:id="@+id/tv_bookwego"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_dp15"
                android:layout_centerVertical="true"
                android:text="@string/what_is_bookwego"
                android:textColor="@color/colorTextDarkGrey"
                android:textSize="@dimen/textsize_sp17"
                android:layout_marginRight="@dimen/margin_dp5"
                android:layout_toLeftOf="@+id/img_down"/>

            <ImageView
                android:id="@+id/img_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_dp10"
                android:padding="@dimen/padding_dp5"
                android:src="@drawable/img_down"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/img_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_dp20"
                android:padding="@dimen/padding_dp5"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@drawable/img_up"
                android:layout_centerVertical="true"
                android:visibility="invisible" />



        </RelativeLayout>

        <View
            android:id="@+id/view_faq"
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_dp1"
            android:layout_below="@+id/relative_question"
            android:layout_marginTop="@dimen/margin_dp5"
            android:background="#ebebeb"
            android:visibility="invisible" />


        <com.codesgood.views.JustifiedTextView
            android:id="@+id/tv_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_faq"
            android:layout_marginLeft="@dimen/margin_dp15"
            android:layout_marginTop="@dimen/margin_dp10"
            android:layout_marginBottom="@dimen/margin_dp15"
            android:text="Lorem ipsum, or lipsum as it is sometimes known, is dummy text used in laying out print, graphic or web designs. The passage is attributed to an unknown typesetter in the 15th century who is thought to have scrambled parts of Cicero's De Finibus Bonorum et Malorum for use in a type specimen book."
            android:textColor="@color/colorTextDarkGrey"
            android:textSize="@dimen/textsize_sp15"
            android:visibility="gone" />

    </RelativeLayout>
</RelativeLayout>
