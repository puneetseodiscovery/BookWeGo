<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_dp5"
        android:layout_marginBottom="@dimen/margin_dp15">

        <ImageView
            android:id="@+id/img_resturant"
            android:layout_width="@dimen/margin_dp150"
            android:layout_height="90dp"
            android:background="@drawable/rounded_outline"
            android:layout_marginLeft="@dimen/margin_dp15"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_resturantname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_dp20"
            android:layout_marginTop="@dimen/margin_dp5"
            android:layout_toRightOf="@+id/img_resturant"
            android:text=""
            android:textColor="@color/colorTextGrey"
            android:textSize="@dimen/textsize_sp12" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_resturantname"
            android:layout_alignLeft="@+id/tv_resturantname"
            android:layout_marginTop="@dimen/margin_dp2"
            android:text=""
            android:textColor="@color/colorTextGrey"
            android:textSize="@dimen/textsize_sp12" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_location"
            android:layout_alignLeft="@+id/tv_resturantname"
            android:layout_marginTop="@dimen/margin_dp2"
            android:text="6 Km"
            android:textColor="@color/colorTextGrey"
            android:textSize="@dimen/textsize_sp12" />

        <TextView
            android:id="@+id/tv_totalrecomandaton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_distance"
            android:layout_alignLeft="@+id/tv_resturantname"
            android:layout_marginTop="@dimen/margin_dp2"
            android:text=""
            android:textColor="@color/colorTextGreen"
            android:textSize="@dimen/textsize_sp12" />

        <TextView
            android:id="@+id/tv_viewRecommended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_totalrecomandaton"
            android:layout_alignLeft="@+id/tv_resturantname"
            android:text="See their Recommendations"
            android:textColor="@color/colorTextGreen"
            android:textSize="@dimen/textsize_sp12" />

        <RelativeLayout
            android:layout_width="@dimen/margin_dp35"
            android:layout_height="@dimen/margin_dp35"
            android:layout_alignBottom="@+id/img_resturant"
            android:layout_marginLeft="@dimen/margin_dp10"
            android:layout_toRightOf="@+id/tv_viewRecommended">

            <ImageView
                android:id="@+id/img_heart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@drawable/heart"
                android:visibility="visible"
                android:layout_centerInParent="true"/>


            <ImageView
                android:id="@+id/img_selectedheart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@drawable/heart_s"
                android:visibility="invisible"
                android:layout_centerInParent="true"/>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/view_size_dp0.5"
            android:layout_below="@+id/img_resturant"
            android:layout_marginTop="@dimen/margin_dp28"
            android:background="@color/colorTextGrey" />
    </RelativeLayout>
</RelativeLayout>
