<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_dp5">

        <TextView
            android:id="@+id/tv_Categories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_dp5"
            android:text=""
            android:layout_marginLeft="@dimen/margin_dp5"
            android:layout_marginRight="@dimen/margin_dp5"
            android:textColor="@color/colorTextGreen"
            android:textSize="@dimen/textsize_sp17" />

        <View
            android:id="@+id/view_tab"
            android:layout_width="wrap_content"
            android:layout_height="1.5dp"
            android:visibility="invisible"
            android:layout_below="@+id/tv_Categories"
            android:layout_alignStart="@+id/tv_Categories"
            android:layout_alignEnd="@+id/tv_Categories"
            android:background="@color/colorBackgroundGreen"

            />
    </RelativeLayout>
</RelativeLayout>
