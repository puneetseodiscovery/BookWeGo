<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="@dimen/margin_dp150"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_resturant"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_dp90"
            android:scaleType="fitXY"
            android:layout_marginRight="@dimen/margin_dp20"
            android:background="@drawable/rounded_outline" />

        <TextView
            android:id="@+id/tv_rest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_resturant"
            android:layout_alignLeft="@+id/img_resturant"
            android:layout_alignRight="@+id/img_resturant"
            android:layout_marginTop="@dimen/margin_dp10"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/colorTextGrey"
            android:textSize="@dimen/textsize_sp13" />

        <TextView
            android:id="@+id/tv_rest_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_rest_name"
            android:layout_marginTop="@dimen/margin_dp3"
            android:layout_marginBottom="@dimen/margin_dp5"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:layout_alignLeft="@+id/img_resturant"
            android:layout_alignRight="@+id/img_resturant"
            android:text=""
            android:textColor="@color/colorTextGrey"
            android:textSize="@dimen/textsize_sp12" />

    </RelativeLayout>
</RelativeLayout>
